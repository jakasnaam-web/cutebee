local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local MessageModule = {}

function MessageModule:ShowMessage(text, duration)
    duration = duration or 4 

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "SapiHubMessageGui"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = playerGui

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0.8, 0, 0, 60)
    frame.Position = UDim2.new(0.5, 0, 0.08, 0)
    frame.AnchorPoint = Vector2.new(0.5, 0)
    frame.BackgroundTransparency = 1
    frame.Parent = screenGui

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 0.12
    label.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    label.BorderSizePixel = 0
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 20
    label.Text = text
    label.TextWrapped = true
    label.Parent = frame
    label.TextXAlignment = Enum.TextXAlignment.Center
    label.TextYAlignment = Enum.TextYAlignment.Center

    label.TextTransparency = 1
    label.BackgroundTransparency = 1
    TweenService:Create(label, TweenInfo.new(0.25), {
        TextTransparency = 0,
        BackgroundTransparency = 0.12
    }):Play()

    task.delay(duration, function()
        local tweenOut = TweenService:Create(label, TweenInfo.new(0.25), {
            TextTransparency = 1,
            BackgroundTransparency = 1
        })
        tweenOut:Play()
        tweenOut.Completed:Wait()
        screenGui:Destroy()
    end)
end

return MessageModule
